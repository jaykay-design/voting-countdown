<Window x:Class="CountdownTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountdownTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="timerText" HorizontalAlignment="Center" Height="200" Text="00:00" TextWrapping="Wrap" VerticalAlignment="Center" Width="606" FontSize="200" FontFamily="Arial Black" FontWeight="Bold" Foreground="White"/>
        <Label x:Name="titleLabel" Content="Label" Margin="0,36,0,0" VerticalAlignment="Top" Foreground="White" FontSize="36" FontFamily="Arial" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Grid.Column="1"/>

    </Grid>
</Window>
